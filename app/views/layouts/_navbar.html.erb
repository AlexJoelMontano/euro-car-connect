<!-- This is a partial file to be used as a navbar throughout the project -->
<nav class="navbar navbar-expand-lg bg-dark navbar-dark text-light full-bar">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Euro Car Connect</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Posts', posts_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Documents', documents_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Listings', listings_path, class: 'nav-link' %>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
         <li class="nav-item">
          <%= form_with url: search_path, method: :get, class: 'd-flex', role: 'search' do %>
            <div class="input-group">
              <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search', aria: { label: 'Search' }, style: 'max-width: 200px;' %>
              <%= submit_tag 'Search', class: 'btn btn-outline-secondary' %>
            </div>
          <% end %>
          </li>
          <li class="nav-item">
            <%= link_to 'Profile', edit_user_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <button type="button" class="btn btn-link nav-link" data-bs-toggle="modal" data-bs-target="#logoutModal">
              Logout
            </button>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Register', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
