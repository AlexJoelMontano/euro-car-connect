<h2>Log in</h2>

<%= form_with(url: new_user_session_path, local: true, id: "login-form") do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control #{'is-invalid' if @error_message}" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control #{'is-invalid' if @error_message}" %>
  </div>
  <div class="form-group">
    <%= form.check_box :remember_me %>
    <%= form.label :remember_me, "Remember me" %>
  </div>
  <div class="actions">
    <%= form.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
