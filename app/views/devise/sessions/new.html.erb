<h2>Log in</h2>

<%= form_with(url: new_user_session_path, local: true, id: "login-form") do |form| %>
  <div class="form-group mt-2">
    <%= form.label :login %>
    <%= form.text_field :login, class: 'form-control', placeholder: 'Username or Email' %>
  </div>
  <div class="form-group mt-2">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control #{'is-invalid' if @error_message}" %>
  </div>
  <div class="form-group mt-2">
    <%= form.check_box :remember_me %>
    <%= form.label :remember_me, "Remember me" %>
  </div>
  <div class="actions row mt-4">
    <%= form.submit "Log in", class: 'btn btn-primary justify-content-center mb-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>